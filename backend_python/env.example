# Database (обязательно)
DATABASE_URL=postgresql://user:password@host:port/database

# Cloudinary - вариант 1: отдельные переменные (рекомендуется)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Cloudinary - вариант 2: одна переменная (альтернатива)
# CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# JWT Secret (обязательно для production)
JWT_SECRET=your-secret-key-change-in-production-min-32-chars

# CORS (опционально)
CORS_ORIGINS=https://web.telegram.org,https://telegram.org

# Frontend URL (опционально)
FRONTEND_URL=https://your-frontend-url.com

# File upload settings (опционально)
MAX_FILE_SIZE=5242880

# Telegram Bot Token (опционально, если используете)
TELEGRAM_BOT_TOKEN=your_bot_token


